    	function Calcul() {
    		var frm = document.frm;
//     		if(frm.name.value == "")
//     		{
//     			alert("이름을 입력해주세요.")
//     			frm.name.focus();
//     			return;
//     		} else if(frm.kor.value == "") {
//     			alert("국어점수를 입력해주세요.")
//     			frm.kor.focus();
//     			return;
//     		} else if(frm.eng.value == "") {
//     			alert("영어점수를 입력해주세요.")
//     			frm.eng.focus();
//     			return;
//     		} else if(frm.math.value == "") {
//     			alert("수학점수를 입력해주세요.")
//     			frm.math.focus();
//     			return;
//     		} else {
    			var name = frm.name.value;
    			var kor = frm.kor.value;
    			var eng = frm.eng.value;
    			var math = frm.math.value;
    			frm.total.value = kor + eng + math;
//     			frm.total.value = frm.kor.value + frm.eng.value + frm.math.value;
    			frm.avg.value = frm.total.value / 3.0;
    			
    			if(frm.avg.value >= 85.5)
    			{
    				frm.result.value = "합격입니다.";
    			} else {
    				frm.result.value = "불합격입니다.";
    			}
//     		}
    	}
    
    	function score() {
    		var frm = document.frm;
    		if(frm.name.value == "")
    		{
    			alert("이름을 입력해주세요.")
    			frm.name.focus();
    			return;
    		} else if(frm.kor.value == "") {
    			alert("국어점수를 입력해주세요.")
    			frm.kor.focus();
    			return;
    		} else if(frm.eng.value == "") {
    			alert("영어점수를 입력해주세요.")
    			frm.eng.focus();
    			return;
    		} else if(frm.math.value == "") {
    			alert("수학점수를 입력해주세요.")
    			frm.math.focus();
    			return;
    		} else {
    			var name = frm.name.value;
    			var kor = frm.kor.value;
    			var eng = frm.eng.value;
    			var math = frm.math.value;
//     			var total = frm.kor.value + frm.eng.value + frm.math.value;
    			var total = (kor+eng+math);
//     			frm.total.value = kor + eng + math;
//     			frm.total.value = frm.kor.value + frm.eng.value + frm.math.value;
				frm.total.value = total;
    			frm.avg.value = (total/3.0);
    			
    			if(frm.avg.value >= 85.5)
    			{
    				frm.result.value = "합격입니다.";
    			} else {
    				frm.result.value = "불합격입니다.";
    			}
    		}
	    	frm.action = "/Curr01_Basic/j34_HW12.jsp";
	    	frm.method = "get";
	    	frm.submit();
    	}
    	
    	function result() {
    		var frm = document.frm;
    		Calcul();
	    	document.frm.action = "/Curr01_Basic/j34_HW13.jsp";
	    	document.frm.method = "post";
	    	document.frm.submit();
    		
    	}
    	
    </script>
